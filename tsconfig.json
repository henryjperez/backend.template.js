{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2020",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./build",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/../*"],
			"@routes": ["./src/routes/index"],
			"@routes/*": ["./src/routes/*"],


			"@graphql": ["./src/graphql/index"],

			"@schemas": ["./src/graphql/schemas/index"],
			"@schemas/*": ["./src/graphql/schemas/*"],

			"@resolvers": ["./src/graphql/resolvers/index"],
			"@resolvers/*": ["./src/graphql/resolvers/*"],

			"@scalars": ["./src/graphql/scalars/index"],
			"@scalars/*": ["./src/graphql/scalars/*"],


			"@interfaces": ["./src/interfaces/index"],
			"@interfaces/*": ["./src/interfaces/*"],

			"@services/*": ["./src/services/*"],
			"@services": ["./src/services/index"],

			"@controllers/*": ["./src/controllers/*"],

			"@middlewares/*": ["./src/middlewares/*"],

			"@dto/*": ["./src/dto/*"],
			"@dto": ["./src/dto/index"],

			"@config": ["./src/config/index"],
			"@config/*": ["./src/config/*"],

			"@libs/*": ["./src/libs/*"],

			"@utils/*": ["./src/utils/*"],
			"@utils": ["./src/utils/index"],
			"@auth": ["./src/utils/auth/index"],
			"@constants": ["./src/utils/constants"],
			"@error": ["./src/controllers/error.controller"]
		},
		"allowJs": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": false
	},
	"include": ["src/**/*"]
}